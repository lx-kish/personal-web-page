{
  "name": "lxkish",
  "version": "1.0.0",
  "description": "Personal landing page",
  "main": "index.js",
  "homepage": "https://lx-kish.github.io/personal-web-page",
  "scripts": {
    "test": "jest",
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css build/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "bundle:js": "webpack",
    "build": "npm-run-all compile:sass prefix:css compress:css bundle:js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "author": "Alexander Kish",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "jest": "^26.6.3",
    "jquery": "^3.5.0",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "firebase": "^8.2.4",
    "gh-pages": "^3.0.0"
  }
}
